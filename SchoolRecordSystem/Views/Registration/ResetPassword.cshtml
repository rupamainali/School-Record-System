@model SharedModel.Registration.ResetPasswordDetails
@{
    ViewData["Title"] = "Reset Password";
}
@{
    if (TempData["Code"] != null)
    {
        if (TempData["Code"].ToString() == "0")
        {
            <div class="alert alert-success">@TempData["Message"]</div>
        }
        else
        {
            <div class="alert alert-danger">@TempData["Message"]</div>
        }
    }

}
<form method="post" asp-controller="Registration" asp-action="ResetPassword">
    <div class="form-group">
        <label asp-for="CurrentPassword">Current Password <span class="text-danger">*</span></label>
        <input type="password" asp-for="CurrentPassword" class="form-control" />
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewPassword">New Password <span class="text-danger">*</span></label>
        <input type="password" asp-for="NewPassword" class="form-control" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmNewPassword">Retype New Password <span class="text-danger">*</span></label>
        <input type="password" asp-for="ConfirmNewPassword" class="form-control" />
        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input id="ChangePassword" type="submit" value="Change Password" class="btn btn-primary" />
    </div>
</form>