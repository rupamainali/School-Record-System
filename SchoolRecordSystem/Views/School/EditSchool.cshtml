@model SchoolDetailsModel
<form method="post" asp-controller="School" asp-action="EditSchool">
    <input type="hidden" asp-for="SchoolId" />
    <div class="form-group">
        <label asp-for="SchoolName">School Name</label>
        <input type="text" asp-for="SchoolName" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="SchoolAddress">School Address</label>
        <input type="text" asp-for="SchoolAddress" required="required" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SchoolRegistrationNumber">School Registration Number</label>
        <input type="text" asp-for="SchoolRegistrationNumber" required="required" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SchoolPrincipal">School Principal</label>
        <input type="text" asp-for="SchoolPrincipal" required="required" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NumberOfTeachers">Number Of Teachers</label>
        <input type="text" asp-for="NumberOfTeachers" required="required" class="form-control" />
    </div>
    <div class="form-group">
        <input id="UpdateSchool" type="submit" value="Update School" class="btn btn-primary" />
    </div>
</form>